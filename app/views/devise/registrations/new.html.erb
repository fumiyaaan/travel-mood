<div class="registration-page">
  <%= render 'shared/header' %>

  <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  
  <div class="form-wrap">
    <div class="form-group">
      <h1 class="form-header">ユーザー新規登録</h1>
    </div>

    <%= render 'devise/shared/error_messages', model: f.object %>

    <div class="form-group">
      <div class="form-text">
        <%= f.label :"ニックネーム" %>
      </div>
      <%= f.text_field :name, class: 'input-default', id: 'user_ニックネーム', autofocus: true, autocomplete: "name" %>
    </div>

    <div class="form-group">
      <div class="form-text">
        <%= f.label :"メールアドレス" %><br />
      </div>
      <%= f.email_field :email, class: 'input-default', id: 'user_メールアドレス' , autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <div class="form-text">
        <%= f.label :"パスワード" %>

      </div>
      <%= f.password_field :password, placeholder: "6文字以上の半角英数字", class: 'input-default', id: 'user_パスワード', autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <div class="form-text">
        <%= f.label :"パスワード再確認" %><br />
      </div>
      <%= f.password_field :password_confirmation, placeholder: "同じパスワードを入力してください", class: 'input-default', id: 'user_パスワード再確認', autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <div class="form-text">
        <%= f.label :"プロフィール（任意）" %><br />
      </div>
      <%= f.text_area :profile, class: 'profile-input-default', autofocus: true, autocomplete: "email", rows:"7" ,maxlength:"1000"%>
    </div>

    <div class="registration-btn">
      <%= f.submit "新規登録", class: "registration-lightblue-btn" %>
    </div>

    <div class="login-btn">
      <%= link_to "ログイン", new_user_session_path, class: "login-transparence-btn" %>
    </div>

  </div>
  <% end %>
</div>