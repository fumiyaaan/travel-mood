<div class="header">
  <div class="left-header">
    <% if user_signed_in? %>
      <%= link_to "Travel Mood", spots_path, class: "travel-mood-logo" %>
    <% else %>
      <%= link_to "Travel Mood", root_path, class: "travel-mood-logo" %>
    <% end %>
  </div>

  <ul class="right-header">
    <% if user_signed_in? %>
      <li><%= link_to current_user.name, user_path(current_user.id), class: "user-name" %></li>
      <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "sign-out" %></li>
    <% else %>
      <li><%= link_to "新規登録", new_user_registration_path, class: "sign-up" %></li>
      <li><%= link_to "ログイン", new_user_session_path, class: "sign-in" %></li>
    <% end %>
  </ul>
</div>