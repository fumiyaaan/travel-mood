.new-spot-page {
  background-image: url("<%= asset_path('cesar-couto-pC2xOplxsVs-unsplash.jpg') %>");
  background-size: cover;
  width: 100%;
  height: 100vh;
  position: relative;
}

.new-spot-page::before {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.3);
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  content: ' ';
}

.new-spot-content {
  position: absolute;
  z-index: 2;
}