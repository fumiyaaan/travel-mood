.spot-show-page {
  background-image: url("<%= asset_path('cesar-couto-pC2xOplxsVs-unsplash.jpg') %>");
  background-size: cover;
  width: 100%;
  height: 100%;
  position: relative;
}

.spot-show-page::before {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.3);
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  content: ' ';
}

.spot-show {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
  width: 100vw;
}

.spot-show-title {
  color: white;
  font-size: 30px;
  margin-top: 10px;
}

.spot-show-img {
  height: 50vh;
  width: 60vw;
  min-height: 500px;
  object-fit: fill;
  position: relative;
}

.more {
  position: absolute;
  cursor: pointer;
  top: 20px;
  right: 30px;
  height: 100px;
  width: 80px;
  text-align: right;
}

.more-list-icon {
  display: inline-block;
  vertical-align: middle;
}

.more-list {
  position: absolute;
  text-align: center;
  width: 60px;
  right: 0;
  font-size: 15px;
  background-color: white;
  box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.6);
  border: 1px solid #ddd;
  border-radius: 3px;
  display: none;
  z-index: 3;
}

.more-list:hover {
  
}

.spot-edit-btn {
  border-bottom: 1px solid #ddd;
}

.more:hover .more-list {
  display: block;
}

.spot-show-poster {
  width: 60vw;
  text-align: right;
  margin: 10px 10px 0 0;
}

.spot-show-poster-text {
  color: white;
  font-size: 20px;
  width: 60vw;
}

.spot-show-description {
  color: white;
  font-size: 25px;
  margin-top: 15px;
  padding: 0 10px;
  width: 60vw;
  word-wrap: normal;
}

.spot-show-unknowns {
  color: white;
  font-size: 18px;
  width: 60vw;
  text-align: right;
  margin-top: 5px;
  padding-right: 5px;
}