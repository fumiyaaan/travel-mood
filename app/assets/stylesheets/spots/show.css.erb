.spot-show-page {
  background-image: url("<%= asset_path('cesar-couto-pC2xOplxsVs-unsplash.jpg') %>");
  background-size: cover;
  width: 100%;
  height: 100%;
  position: relative;
}

.spot-show-page::before {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.3);
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  content: ' ';
}

.spot-show {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
  
  width: 100vw;
}

.spot-show-title {
  color: white;
  font-size: 30px;
  margin-top: 10px;
}

.spot-show-img {
  height: 50vh;
  width: 60vw;
  min-height: 500px;
  object-fit: fill;
}

.spot-show-poster {
  width: 60vw;
  text-align: right;
  margin: 10px 10px 0 0;
}

.spot-show-poster-text {
  color: white;
  font-size: 20px;
  width: 60vw;
}

.spot-show-description {
  color: white;
  font-size: 25px;
  margin-top: 10px;
  width: 60vw;
  word-wrap: normal;
}

.spot-show-unknowns {
  color: white;
  width: 60vw;
  text-align: right;
}