.spot-show-page {
  background-image: url("<%= asset_path('cesar-couto-pC2xOplxsVs-unsplash.jpg') %>");
  background-size: cover;
  width: 100%;
  height: 100%;
  position: relative;
}

.spot-show-page::before {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.3);
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  content: ' ';
}

.spot-show {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
}

.spot-show-title {
  color: white;
  font-size: 30px;
  margin-top: 10px;
}

.spot-show-img {
  height: 50vh;
  width: 60vw;
  min-height: 500px;
  object-fit: fill;
  position: relative;
}

.more {
  position: absolute;
  cursor: pointer;
  top: 20px;
  right: 30px;
  height: 100px;
  width: 80px;
  text-align: right;
}

.more-list-icon {
  display: inline-block;
  vertical-align: middle;
}

.more-list {
  position: absolute;
  text-align: center;
  width: 60px;
  right: 0;
  font-size: 15px;
  background-color: white;
  box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.6);
  border: 1px solid #ddd;
  border-radius: 3px;
  display: none;
  z-index: 3;
}

.spot-edit-btn {
  border-bottom: 1px solid #ddd;
}

.spot-edit-btn:hover {
  opacity: 0.8;
  background: lightblue;
}

.spot-delete-btn:hover {
  opacity: 0.8;
  background: lightblue;
}

.more:hover .more-list {
  display: block;
}

.spot-show-poster {
  width: 60vw;
  text-align: right;
  margin: 10px 10px 0 0;
}

.spot-show-poster:hover {
  opacity: 0.8;
}

.spot-show-poster-text {
  color: white;
  font-size: 20px;
  width: 60vw;
}

.spot-show-description {
  color: white;
  font-size: 25px;
  margin-top: 15px;
  padding: 0 10px;
  width: 60vw;
  word-wrap: normal;
}

.spot-show-unknowns {
  color: white;
  font-size: 18px;
  width: 60vw;
  text-align: right;
  margin-top: 5px;
  padding-right: 5px;
}

.comment-post-wrap {
  position: relative;
  width: 100%;
  margin: 60px 0 40px 0;
}

.text-form-group {
  display: flex;
  justify-content: center;
}

.text-input-default {
  width: 500px;
  height: 80px;
  padding: 5px 7px;
  margin-top: 15px;
}

.unknowns-form-group {
  display: flex;
  justify-content: center;
  margin-top: 20px;
  width: 500px;
  margin: 0 auto;
  margin-top: 25px;
}

.unknowns-input-default {
  width: 43px;
  height: 42px;
  padding: 16px 16px;
}

.unknowns-text {
  color: white;
  margin: 5px 10px 0 0;
}

.unknowns-description-text {
  color: white;
  margin: 7px 0 0 10px;
}

.comment-btn-group {
  display: flex;
  justify-content: center;
}

.comment-lightblue-btn {
  width: 150px;
  margin: 20px 0;
  background: lightblue;
  color: white;
  border: 1px solid lightblue;
  font-size: 15px;
  cursor: pointer;
  border-radius: 3px;
}

.comment-lightblue-btn:hover {
  opacity: 0.8;
}

.comments-wrap {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  flex-direction: column;
}

.comments-title {
  color: white;
}

.comment-main-info {
  color: white;
  width: 50vw;
  margin: 15px 0;
}

.comment-user {
  color: white;
}

.comment-user:hover {
  opacity: 0.8;
}

.comment-unknown {
  color: white;
  width: 50vw;
  text-align: right;
  padding-right: 20px;
  margin-bottom: 20px;
}