.all-spots-page {
  background-image: url("<%= asset_path('cesar-couto-pC2xOplxsVs-unsplash.jpg') %>");
  background-size: cover;
  width: 100%;
  height: 100%;
  position: relative;
}

.all-spots-page::before {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.3);
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  content: ' ';
}

.all-spots {
  width: 100vw; 
  flex-wrap: wrap;
  display: flex;
  justify-content: flex-start;
  position: relative;
}

.spot-lists-title {
  font-size: 30px;
  color: white;
  width: 100%;
  text-align: center;
  margin: 15px 0;
}

.spot-lists {
  width: 100vw;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.spot-lists>.spot-list {
  width: 35vh;
  padding: 1vw;
}

.spot-img-content {
  position: relative;
}

.spot-img {
  width: 33vh;
  height: 33vh;
}

.spot-info {
  display: flex;
  align-items: flex-end;
  flex-direction: column;
}

.spot-main-info {
  display: flex;
  margin: 0 auto;
}

.spot-title {
  color: white;
  margin-left: 15px;
  font-size: 15px;
}

.spot-poster {
  color: white;
  margin: 0 35px;
  font-size: 17px;
}

.spot-unknowns {
  color: white;
  font-size: 13px;
  margin-right: 1px;
}

.new-spot-btn {
  position: absolute;
  z-index: 2;
}

.new-spot-btn {
  background: lightblue;
  text-align: center;
  border-radius: 4%;
  bottom: 32px;
  right: 32px;
  position: fixed;
  padding: 15px;
}

.new-spot-btn-text {
  color: #fff;
  display: block;
  font-size: 16px;
  text-decoration: none;
  margin-bottom: 5px;
}

.new-spot-btn {
  width: 100px;
}


