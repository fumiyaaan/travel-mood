  width: 100%;
  height: 100vh;
  position: relative;
}

.all-spots-page::before {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.3);
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  content: ' ';
}

