.registration-page {
  background-image: url("<%= asset_path('IMG_0358.jpeg') %>");
  background-size: cover;
  width: 100%;
  height: 800px;
  position: relative;
}

.registration-page::before {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.3);
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  content: ' ';
}

.template {
  color: white;
  z-index: 3;
}

.registration-main {
  width: 100%;
  display: flex;
  justify-content: center;
  position: absolute;
  z-index: 2;
}

.form-wrap {
  width: 50%;
}

.form-header {
  color: white;
  margin: 0 auto;
}

.form-group {
  width: 50%;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
}

.form-text {
  color: white;
  font-size: 20px;
  margin: 10px 0 2px 0;
}

.input-default {
  width: 100%;
  height: 30px;
  padding: 5px 7px;
}

.registration-btn {
  display: flex;
  justify-content: center;
}

.registration-lightblue-btn {
  background: lightblue;
  color: white;
  font-size: 18px;
  width: 50%;
  margin-top: 20px;
  height: 30px;
  border: 1px solid lightblue;
  cursor: pointer;
  border-radius: 3px;
}

.registration-lightblue-btn:hover {
  background: #57C3E9;
  opacity: 0.8;
}

.login-btn {
  display: flex;
  justify-content: center;
}

.login-transparence-btn {
  color: white;
  font-size: 18px;
  width: 50%;
  height: 30px;
  text-align: center;
  margin-top: 20px;
  border: 1px solid lightblue;
  border-radius: 3px;
}

.login-transparence-btn:hover {
  opacity: 0.8;
}

.profile-input-default {
  padding: 5px 7px;
}