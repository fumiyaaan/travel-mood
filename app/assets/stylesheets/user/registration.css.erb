.registration-page {
  background-image: url("<%= asset_path('IMG_0358.jpeg') %>");
  background-size: cover;
  width: 100%;
  height: 100vh;
  position: relative;
}

.registration-page::before {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.3);
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  content: ' ';
}

.form-wrap {
  width: 50%;
  margin: 0 auto;
}

.form-group {
  width: 50%;
  margin: 0 auto;
}

.form-text {
  color: white;
  font-size: 20px;
  margin-bottom: 10px;
  width: 50%;
  margin: 0 auto;
}

.input-default {
  width: 50%;
  align-items: center;
}

.registration-lightblue-btn {
  background: lightblue;
}
