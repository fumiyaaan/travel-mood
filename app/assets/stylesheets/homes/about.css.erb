.about-page {
  background-image: url("<%= asset_path('amy-humphries-8ML_M_BRI-M-unsplash.jpg') %>");
  background-size: cover;
  width: 100%;
  height: 100vh;
  position: relative;
}

.about-page::before {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.3);
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  content: ' ';
}

.about-main {
  position: absolute;
  z-index: 3;
}

.about-title {
  font-size: 30px;
  color: white;
  margin: 50px 0 20px 30px;
}

.explanation {
  color: white;
  font-size: 30px;
  margin: 20px 0 10px 30px;
}

.start-btn {
  display: inline-block;
  margin: 50px 0 0 30px;
}

.start-white-btn {
  color: white;
  font-size: 18px;
  width: 50%;
  height: 30px;
  padding: 15px 25px;
  text-align: center;
  border: 1px solid white;
  cursor: pointer;
  border-radius: 3px;
}

.start-white-btn:hover {
  opacity: 0.8;
}